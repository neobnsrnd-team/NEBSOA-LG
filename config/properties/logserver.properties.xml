<?xml version="1.0" encoding="EUC-KR"?>
<!-- 
	
	LogQueue, Lecene index 작업과 관련된 프로퍼티 파일입니다.
	
 -->
<properties>
	
    <Property key="LOG_PROCESSOR_USE" 
         value="Y" 
         desc="LogProcessor 사용 여부" />   
         
    <Property key="LOG_QUEUE_NAME" 
         value="LOG_QUEUE" 
         desc="로그 큐 이름" />  
         
    <Property key="LOG_SENDER_CONNECTION_CHECK_INTERVAL" 
         value="30" 
         desc="로그 큐 세션을 점검하고 LogStore에 쌓인 로그 데이터를 flush 해주는 쓰레드의 작동 interval 시간(단위 : 초)" />
         
    <Property key="LOG_STORE_FLUSH_INTERVAL" 
         value="60" 
         desc="로그 큐로 로그를 마지막으로 전송한 후 이 시간이 지났으면  LogStore에 쌓인 로그 데이터를 강제로 flush한다. (단위 : 초)" />
         
    <Property key="LOG_SENDER_CONNECTION_URI" 
         value="vm://localhost?jms.useAsyncSend=true" 
         desc="LogSender가 MQ로 커넥션을 맺을 때 사용하는 URI" />
    
    <Property key="LOG_RECEIVER_CONNECTION_URI" 
         value="vm://localhost?jms.useAsyncSend=true" 
         desc="LogReceiver가 MQ로 커넥션을 맺을 때 사용하는 URI" />
    
    <Property key="LOG_STORE_MAX_SIZE" 
         value="100" 
         desc="로그 큐로 한번에 전송하는 로그의 MAX 갯수" />     
    
    <Property key="LOG_CATEGORY" 
         value="LOG_SVR" 
         desc="log server 내부에서 남기는 로그의 카테고리" />     
    
    <Property key="BLOCKING_QUEUE_SIZE" 
         value="500" 
         desc="blocking queue의 사이즈" />   
    
    <Property key="LOG_SEND_WORKER_COUNT" 
         value="5" 
         desc="log send worker 쓰레드 갯수 (=blocking queue 갯수)" />   
        
    <Property key="LOG_RECEIVE_WORKER_COUNT" 
         value="5" 
         desc="log receiver worker instance 갯수" />   
         
    <Property key="MQ_MEMORY_THRESHOLD" 
         value="80" 
         desc="MQ memory 사용량에 따라 Lostore를 중지 또는 재시작 시킬 때 사용하는 기준 값." />          

    <Property key="MQ_MEMORY_LIMIT" 
         value="52428800" 
         desc="MQ memory Limit(단위:byte)" />
         
    <Property key="INDEX_FLUSH_TIME_THRESHOLD" 
         value="120000" 
         desc="Memory에 쌓인 index가 file로 마지막으로 옮겨진 후 이 시간이 경과되면 IndexBuilderManager 쓰레드에 의해 강제로 file로 flush된다.(단위 : millisecond)" />      
    
    <Property key="RECEIVE_WORKER_TYPE" 
         value="INDEX" 
         desc="log receiver worker 타입 (DB 또는 INDEX)" />      
    
    <Property key="DB_LOGGER" 
         value="spider.logserver.dblog.DefaultDBLogger" 
         desc="log receiver worker 타입이 DB인 경우 DBLogger 클래스명" />      
        
    <Property key="DB_NAME" 
         value="SPIDER" 
         desc="DB에 로그를 쌓을 때 사용하는 DB 이름" /> 
    
    <Property key="DB_INSERT_THRSHOLD" 
         value="5000" 
         desc="로그 저장 방식이 DB인 경우 DB에 insert하는 시간이 이 시간을 초과하면 info 레벨의 로그를 남긴다. (단위 : millisecond)" /> 
    
    <Property key="BLOCKING_QUEUE_POLLING_PERIOD" 
         value="5" 
         desc="BLOCKING_QUEUE_POLLING 주기(초단위 세팅)" /> 
         
    <!--Lucene Indexing 관련 설정 -->        
    <Property key="DEFAULT_MERGE_FACTOR" 
         value="200" 
         desc="메모리에 저장할 Document의 개수, 병합 빈도수 조절 " />     
         
    <Property key="DEFAULT_BUFFERED_DOCS" 
         value="1000" 
         desc="세그먼트 생성 전까지 버퍼링 하는 Document의 수" />   
                                 
    <Property key="MIN_OPTIMIZE_CNT" 
         value="10000" 
         desc="optimize Count 만큼의 Document가 Add되면 Optimize를 실행" />           
    
    <Property key="FIELD_NAME" 
         value="messageLog" 
         desc="해당 Field이름으로 로그 메시지가 Document에 추가된다." />     
            
    <Property key="MESSAGE_LOG_INDEX_DIRECTORY" 
         value="C:\\index\\log_" 
         desc="메시지 로그에 대해 생성된 인덱스를 저장할 디렉토리" />		
	 
</properties>